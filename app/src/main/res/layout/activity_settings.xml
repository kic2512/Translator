<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kic.translator.SettingsActivity"
    >


    <Spinner
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_from"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:entries="@array/lang_array"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/button_save_translate_lang"
        android:layout_below="@+id/spinner_from"
        android:layout_alignLeft="@+id/spinner_from"
        android:layout_alignStart="@+id/spinner_from"
        android:layout_marginTop="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_to"
        android:entries="@array/lang_array"
        android:layout_alignTop="@+id/spinner_from"
        android:layout_toRightOf="@+id/spinner_from"
        android:layout_toEndOf="@+id/spinner_from" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button_back"
        android:layout_below="@+id/button_save_translate_lang"
        android:layout_alignLeft="@+id/button_save_translate_lang"
        android:layout_alignStart="@+id/button_save_translate_lang"
        android:layout_alignRight="@+id/button_save_translate_lang"
        android:layout_alignEnd="@+id/button_save_translate_lang" />
</RelativeLayout>